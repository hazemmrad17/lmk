{% extends 'base.html.twig' %}

{% block title %}Support - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Support</h4>

        <div class="row">
            <!-- Contact Information -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Contact Us</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Need help? Our support team is here to assist you.</p>
                        
                        <div class="d-flex align-items-center mb-3">
                            <i class="bx bx-envelope me-2 fs-4"></i>
                            <span>support@lehrnmitkarim.com</span>
                        </div>
                        
                        <div class="d-flex align-items-center mb-3">
                            <i class="bx bx-phone me-2 fs-4"></i>
                            <span>+1 (555) 123-4567</span>
                        </div>
                        
                        <div class="d-flex align-items-center">
                            <i class="bx bx-time me-2 fs-4"></i>
                            <span>Monday - Friday, 9:00 AM - 5:00 PM EST</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Frequently Asked Questions</h5>
                    </div>
                    <div class="card-body">
                        <div class="accordion" id="faqAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                        How do I book a session?
                                    </button>
                                </h2>
                                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        To book a session, navigate to the course page and click on the "Book Now" button. Select your preferred date and time from the available slots.
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                        How do I cancel a booking?
                                    </button>
                                </h2>
                                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        You can cancel a booking by going to your bookings page and clicking the "Cancel" button next to the booking you wish to cancel.
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                        What payment methods do you accept?
                                    </button>
                                </h2>
                                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        We accept all major credit cards (Visa, MasterCard, American Express) and PayPal.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 