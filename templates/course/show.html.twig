{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">{{ course.title }}</h4>
                        <div>
                            {% if is_granted('ROLE_TUTOR') and course.tutor.id == app.user.profile.tutorProfile.id %}
                                <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-outline-primary me-2">
                                    <i class="bx bx-edit me-1"></i>
                                    Edit
                                </a>
                                <form method="post" action="{{ path('app_course_delete', {'id': course.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                                    <button class="btn btn-outline-danger">
                                        <i class="bx bx-trash me-1"></i>
                                        Delete
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold">Description</h5>
                        <p class="mb-0">{{ course.description }}</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="fw-bold">Course Details</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bx bx-time me-2"></i>
                                    Duration: {{ course.duration }} minutes
                                </li>
                                <li class="mb-2">
                                    <i class="bx bx-euro me-2"></i>
                                    Price: {{ course.price }} â‚¬
                                </li>
                                <li class="mb-2">
                                    <i class="bx bx-book me-2"></i>
                                    Subjects:
                                    {% for subject in course.subjects %}
                                        <span class="badge bg-label-primary me-1">{{ subject.name }}</span>
                                    {% endfor %}
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5 class="fw-bold">Tutor Information</h5>
                            <div class="d-flex align-items-center mb-3">
                                <img src="{{ course.tutor.profile.avatar ? asset(course.tutor.profile.avatar.path) : asset('assets/img/avatars/default.png') }}" alt="Tutor" class="rounded-circle me-3" width="48" height="48">
                                <div>
                                    <h6 class="mb-0">{{ course.tutor.email }}</h6>
                                    <small class="text-muted">Tutor</small>
                                </div>
                            </div>
                            <p class="mb-0">{{ course.tutor.profile.tutorProfile.bio }}</p>
                        </div>
                    </div>

                    {% if course.materials|length > 0 %}
                        <div class="mb-4">
                            <h5 class="fw-bold">Course Materials</h5>
                            <div class="list-group">
                                {% for material in course.materials %}
                                    <a href="{{ asset(material.path) }}" class="list-group-item list-group-item-action" target="_blank">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ material.type }}</h6>
                                            <small>{{ material.size|format_bytes }}</small>
                                        </div>
                                        <small class="text-muted">{{ material.mimeType }}</small>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            {% if is_granted('ROLE_STUDENT') %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Book This Course</h5>
                        <p class="card-text">Schedule a session with the tutor</p>
                        <a href="{{ path('app_booking_new', {'course': course.id}) }}" class="btn btn-primary w-100">
                            <i class="bx bx-calendar-plus me-1"></i>
                            Book Now
                        </a>
                    </div>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reviews</h5>
                    {% if course.reviews|length > 0 %}
                        {% for review in course.reviews %}
                            <div class="d-flex mb-4">
                                <div class="flex-shrink-0">
                                    <img src="{{ review.student.profile.avatar ? asset(review.student.profile.avatar.path) : asset('assets/img/avatars/default.png') }}" alt="Student" class="rounded-circle" width="40" height="40">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h6 class="mb-0">{{ review.student.email }}</h6>
                                        <small class="text-muted">{{ review.createdAt|date('M d, Y') }}</small>
                                    </div>
                                    <div class="mb-1">
                                        {% for i in 1..5 %}
                                            <i class="bx bxs-star{% if i <= review.rating %}-filled text-warning{% endif %}"></i>
                                        {% endfor %}
                                    </div>
                                    <p class="mb-0">{{ review.comment }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted mb-0">No reviews yet</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 