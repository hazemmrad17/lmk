{% extends 'base.html.twig' %}

{% block title %}Available Courses{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Available Courses</h4>

    <div class="row">
        {% for course in courses %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text">{{ course.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-primary fw-bold">${{ course.price }}</div>
                            <div class="text-muted">{{ course.duration }} minutes</div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('course_show', {'slug': course.slug}) }}" class="btn btn-primary w-100">View Course</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No courses available at the moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
 